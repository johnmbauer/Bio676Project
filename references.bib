	journal = {Soil and Tillage Research},
	author = {Ferdush, Jannatul and Paul, Varun and Varco, Jac and Jones, Keri and Sasidharan, Sankar Manalilkada},
	month = oct,
	year = {2023},
	keywords = {CO enrichment, Column experiment, Mineral weathering, Nutrient availability, PH change, Soil health, Leachate chemistry},
	pages = {105839},
	file = {ScienceDirect Snapshot:C\:\\Users\\johnb\\Zotero\\storage\\ATC7EC3A\\S0167198723002064.html:text/html},
