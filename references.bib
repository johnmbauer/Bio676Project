	journal = {International Journal of Systematic and Evolutionary Microbiology},
	author = {Fu, Yansong and Yan, Rui and Liu, Dongli and Jiang, Shanwen and Cui, Lin and Guo, Xiaowei and Wang, Xiangjing and Zhang, Ji and Xiang, Wensheng},
	year = {2019},
